{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": false,
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2016", "es2017.object", "es2019"],
    "paths": {
      "@env": ["src/configs/index"],
      "@config/*": ["src/configs/*"],
      "@controller/*": ["src/controllers/*"],
      "@middleware/*": ["src/middlewares/*"],
      "@model/*": ["src/models/*"],
      "@service/*": ["src/services/*"],
      "@logger": ["src/utils/logger/index"],
      "@ctypes": ["src/utils/types/index"],
      "@decorator/*": ["src/utils/decorators/*"],
      "@repository/*": ["src/repositories/*"],
      "@socket": ["src/utils/socket-inversify/index"],
      "@codes": ["src/utils/http/codes"],
      "@exceptions": ["src/utils/http/exceptions/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "logs", "__tests__/**/*"]
}
